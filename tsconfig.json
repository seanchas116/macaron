{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "./dest"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/compiler/AST.ts",
        "./src/compiler/CodeEmitter.ts",
        "./src/compiler/Compiler.ts",
        "./src/compiler/DeclarationType.ts",
        "./src/compiler/Environment.ts",
        "./src/compiler/Expression.ts",
        "./src/compiler/GenericType.ts",
        "./src/compiler/SourceLocation.ts",
        "./src/compiler/Type.ts",
        "./src/compiler/TypeCheckError.ts",
        "./src/compiler/TypeEvaluator.ts",
        "./src/compiler/TypeVariance.ts",
        "./src/compiler/defaultEnvironment.ts",
        "./src/compiler/nativeTypes.ts",
        "./src/test/compilerTest.ts",
        "./typings/bundle.d.ts",
        "./typings/empower/empower.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/node/node.d.ts",
        "./typings/power-assert-formatter/power-assert-formatter.d.ts",
        "./typings/power-assert/power-assert.d.ts"
    ]
}
